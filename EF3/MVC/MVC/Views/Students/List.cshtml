@model IEnumerable<MVC.Models.Student>
@using System.Security.Claims

@if (User.Identity != null && User.Identity.IsAuthenticated)
{
    <div class="alert alert-success">
        Welcome, @User.Identity.Name!
    </div>

    <div class="mb-2">
        @if (User.IsInRole("Admin"))
        {
            <span>You are an Admin.</span>
        }
        else if (User.IsInRole("HR"))
        {
            <span>You are in HR.</span>
        }
        else if (User.IsInRole("Instructor"))
        {
            <span>You are an Instructor.</span>
        }
        else if (User.IsInRole("Student"))
        {
            <span>You are a Student.</span>
        }
    </div>

    <form method="post" asp-controller="Account" asp-action="Logout">
        <button type="submit" class="btn btn-danger mb-2">Logout</button>
    </form>
}


@{
    ViewData["Title"] = "Students List";
}
@if (User.Identity != null && User.Identity.IsAuthenticated)
{
    <div class="mb-3">
        @if (User.IsInRole("Admin") || User.IsInRole("HR"))
        {
            <a asp-action="List" asp-controller="Students" class="btn btn-primary">Students</a>
        }

        @if (User.IsInRole("Admin"))
        {
            <a asp-action="List" asp-controller="Courses" class="btn btn-primary">Courses</a>
            <a asp-action="List" asp-controller="Instructors" class="btn btn-primary">Instructors</a>
            <a asp-action="List" asp-controller="Departments" class="btn btn-primary">Departments</a>
        }

        @if (User.IsInRole("Instructor"))
        {
            <a asp-action="MyCourses" asp-controller="Courses" class="btn btn-primary">My Courses</a>
            <a asp-action="StudentsInMyCourses" asp-controller="Students" class="btn btn-primary">Students</a>
        }

        @if (User.IsInRole("Student"))
        {
            <a asp-action="MyCourses" asp-controller="Courses" class="btn btn-primary">My Courses</a>
        }
    </div>
}

<h2>Students</h2>

<form method="get" asp-action="List" class="mb-3">
    <input type="text" name="search" value="@ViewBag.Search" placeholder="Search by name or address" class="form-control" style="width:300px; display:inline-block;" />
    <button type="submit" class="btn btn-primary">Search</button>
</form>

<form method="get" asp-action="List" class="mb-3" style="display:inline-block;">
    <button type="submit" class="btn btn-secondary">Reset Filters</button>
</form>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Address</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var s in Model)
        {
            <tr>
                <td>@s.Id</td>
                <td>@s.Name</td>
                <td>@s.Address</td>
                <td>
                    <a asp-action="Details" asp-route-id="@s.Id" class="btn btn-info btn-sm">Details</a>
                    <a asp-action="Edit" asp-route-id="@s.Id" class="btn btn-warning btn-sm">Edit</a>
                    <form method="post" asp-action="Delete" asp-route-id="@s.Id" style="display:inline;"
                          onsubmit="return confirm('Are you sure you want to delete this student?');">
                        <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
@if (ViewBag.TotalPages > 1)
{
    <nav aria-label="Page navigation">
        <ul class="pagination">

            <!-- First Page -->
            <li class="page-item @(ViewBag.CurrentPage == 1 ? "disabled" : "")">
                <a class="page-link" asp-action="List" asp-route-page="1" asp-route-search="@ViewBag.Search">First</a>
            </li>

            <!-- Previous -->
            <li class="page-item @(ViewBag.CurrentPage == 1 ? "disabled" : "")">
                <a class="page-link" asp-action="List" asp-route-page="@(ViewBag.CurrentPage - 1)" asp-route-search="@ViewBag.Search">Previous</a>
            </li>

            <!-- Page Numbers -->
            @for (int i = 1; i <= ViewBag.TotalPages; i++)
            {
                <li class="page-item @(ViewBag.CurrentPage == i ? "active" : "")">
                    <a class="page-link" asp-action="List" asp-route-page="@i" asp-route-search="@ViewBag.Search">@i</a>
                </li>
            }

            <!-- Next -->
            <li class="page-item @(ViewBag.CurrentPage == ViewBag.TotalPages ? "disabled" : "")">
                <a class="page-link" asp-action="List" asp-route-page="@(ViewBag.CurrentPage + 1)" asp-route-search="@ViewBag.Search">Next</a>
            </li>

            <!-- Last Page -->
            <li class="page-item @(ViewBag.CurrentPage == ViewBag.TotalPages ? "disabled" : "")">
                <a class="page-link" asp-action="List" asp-route-page="@ViewBag.TotalPages" asp-route-search="@ViewBag.Search">Last</a>
            </li>

        </ul>
    </nav>
}

<a asp-action="Create" class="btn btn-success">Add New Student</a>
