@model IEnumerable<MVC.Models.Student>
@using System.Security.Claims

@if (User.Identity != null && User.Identity.IsAuthenticated)
{
    <div class="alert alert-success">
        Welcome, @User.Identity.Name!
    </div>

    <form method="post" asp-controller="Account" asp-action="Logout">
        <button type="submit" class="btn btn-danger mb-2">Logout</button>
    </form>
}

@{
    ViewData["Title"] = "Students List";
}

<h2>Students</h2>

<form method="get" asp-action="List" class="mb-3">
    <input type="text" name="search" value="@ViewBag.Search" placeholder="Search by name or address" class="form-control" style="width:300px; display:inline-block;" />
    <button type="submit" class="btn btn-primary">Search</button>
</form>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Address</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var s in Model)
        {
            <tr>
                <td>@s.Id</td>
                <td>@s.Name</td>
                <td>@s.Address</td>
                <td>
                    <a asp-action="Details" asp-route-id="@s.Id" class="btn btn-info btn-sm">Details</a>
                    <a asp-action="Edit" asp-route-id="@s.Id" class="btn btn-warning btn-sm">Edit</a>
                    <a asp-action="Delete" asp-route-id="@s.Id" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Create" class="btn btn-success">Create New Student</a>
