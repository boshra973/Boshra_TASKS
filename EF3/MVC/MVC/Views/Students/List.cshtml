@model IEnumerable<MVC.Models.Student>

<h2>Students</h2>

<p>
    <a asp-action="Create" asp-controller="Students" class="btn btn-primary">Add Student</a>
</p>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Address</th>
            <th>DeptId</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var student in Model)
        {
            <tr>
                <td>@student.Id</td>
                <td>@student.Name</td>
                <td>@student.Address</td>
                <td>@student.DeptId</td>
                <td>
                    <a asp-action="Details" asp-controller="Students" asp-route-id="@student.Id">Details</a> |
                    <a asp-action="Edit" asp-controller="Students" asp-route-id="@student.Id">Edit</a> |
                    <a asp-action="Delete" asp-controller="Students" asp-route-id="@student.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
