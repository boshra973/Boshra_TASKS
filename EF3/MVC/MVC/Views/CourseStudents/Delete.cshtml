@model MVC.Models.CourseStudents

<h2>Delete CourseStudent</h2>

<h3>Are you sure you want to delete this?</h3>

<div>
    <p><strong>Student:</strong> @Model.Student?.Name</p>
    <p><strong>Course:</strong> @Model.Course?.Name</p>
    <p><strong>Degree:</strong> @Model.Degree</p>
</div>

<form asp-action="Delete" asp-controller="CourseStudents" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="CourseStudentsId" />
    <input type="submit" value="Delete" class="btn btn-danger" />
</form>

<p>
    <a asp-action="List" asp-controller="CourseStudents">Back to List</a>
</p>
